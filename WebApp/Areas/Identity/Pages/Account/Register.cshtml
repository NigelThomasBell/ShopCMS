@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="mb-3">@ViewData["Title"]</h2>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group mb-3">
        <label class="form-label" asp-for="Input.Email">Username</label>
        <input class="form-control" asp-for="Input.Email" />
        <span class="text-danger" asp-validation-for="Input.Email"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label" asp-for="Input.Password">Password</label>
        <input class="form-control" asp-for="Input.Password" />
        <span class="text-danger" asp-validation-for="Input.Password"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label" asp-for="Input.ConfirmPassword">Confirm password</label>
        <input class="form-control" asp-for="Input.ConfirmPassword" />
        <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
    </div>
    <div class="form-group mb-3">
        <button type="submit" class="btn btn-primary w-100 py-8 fs-4 rounded-2">Sign Up</button>
    </div>
    <div class="form-group">
        <p>
            <a class="fw-bold fs-4 mb-0" asp-page="./Login">Log in (Demo accounts available)</a>
        </p>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <script>
        const demoButtonClicked = async (accountType) => {
            let username, password;
            switch (accountType) {
                case 'Admin':
                    username = 'admin@test.com';
                    password = 'Apple_No5';
                    break;
                case 'Cashier':
                    username = 'cashier@test.com';
                    password = 'Apple_No5';
                    break;
                default:
                    return;
            }
            document.getElementById('Input_Email').value = username;
            document.getElementById('Input_Password').value = password;
        }
    </script>

    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label htmlAttributes="{ id = "Input_Email" }" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label htmlAttributes="{ id = " Input_Password" }" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary" onclick="demoButtonClicked('Admin')">Demo Admin</button>
                    <button type="submit" class="btn btn-primary" onclick="demoButtonClicked('Cashier')">Demo Cashier</button>
                </div>
                <div class="form-group mb-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}